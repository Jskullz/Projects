# Open the file for reading
with open('C:\\Program Files\\Git\\Projects\\Udemy 100 days of code\\Day 4\\treasure_test.py', 'r') as file:
    lines = file.readlines()

# Open the same file for writing
with open('C:\\Program Files\\Git\\Projects\\Udemy 100 days of code\\Day 4\\treasure_test.py', 'w') as file:
    for line in lines:
        # Check if the line contains a variable assignment and 'print'
        if '=' in line and 'print' in line:
            # Remove 'print' from the line
            line = line.replace('print', '', 1)  # Remove only the first occurrence of 'print'
        # Write the modified line to the file
        file.write(line)
